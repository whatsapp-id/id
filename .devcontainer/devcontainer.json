{
  "name": "Auto Run Server",
  "image": "mcr.microsoft.com/devcontainers/node:20",
  "postCreateCommand": "npm install",
  "postStartCommand": "node server.js",
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Server",
      "onAutoForward": "openBrowser"
    }
  }
}
